@model GerenciadorDeProdutos.Domain.Entities.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="fw-bold mb-4 text-primary">@ViewData["Title"]</h2>
        </div>
    </div>
    <form asp-action="Edit" method="post" class="mb-5">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Nome" class="form-label fw-bold">
                    Nome do Produto
                </label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Descricao" class="form-label fw-bold">
                    Descrição
                </label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>

            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Preco" class="form-label fw-bold">
                    Preço
                </label>
                <input asp-for="Preco" class="form-control" id="Preco" type="text" />
                <span asp-validation-for="Preco" class="text-danger"></span>

            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="QuantidadeEstoque" class="form-label fw-bold">
                    Quantidade
                </label>
                <input asp-for="QuantidadeEstoque" class="form-control" />
                <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
            </div>
            <div class="row">
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.7/jquery.inputmask.min.js"></script>
    <script src="~/js/inputmask.js"></script>
    <script>
        $(document).ready(function () {
            function decodeHTMLEntities(text) {
                var txt = document.createElement("textarea");
                txt.innerHTML = text;
                return txt.value;
            }
    </script>
}
